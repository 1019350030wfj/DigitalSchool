<?xml version="1.0" encoding="utf-8"?>
<com.onesoft.digitaledu.widget.FixWHRatioFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_r0_fff_d9d9d9">

    <ImageView
        android:id="@+id/image_pick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/more_pick"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="top|right"
        android:scaleType="centerInside"
        android:src="@drawable/icon_annex_more"/>

    <TextView
        android:id="@+id/txt_size_pick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:padding="@dimen/dimen5"
        android:text="123.0KB"
        android:textColor="@android:color/white"
        android:textSize="@dimen/size10"/>
</com.onesoft.digitaledu.widget.FixWHRatioFrameLayout>
