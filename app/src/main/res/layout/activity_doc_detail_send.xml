<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:paddingTop="@dimen/dimen15">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_delete"
        android:layout_alignParentTop="true"
        android:scrollbars="none">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    android:id="@+id/txt_title"
                    style="@style/detail_message_title"
                    android:drawablePadding="@dimen/dimen5"
                    android:drawableRight="@drawable/icon_mess_infor"
                    android:text="任职班主任通知"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_ebebeb"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    style="@style/send_message_title"
                    android:text="@string/send_time"/>
                <TextView
                    android:id="@+id/txt_send_time"
                    style="@style/send_message_title_right"
                    android:text="2016-10-31 10:36"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_ebebeb"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    style="@style/send_message_title"
                    android:text="@string/send_person"/>
                <TextView
                    android:id="@+id/txt_send_person"
                    style="@style/send_message_title_right"
                    android:text=""/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_ebebeb"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <TextView
                    style="@style/send_message_title"
                    android:text="@string/recipient"/>
                <TextView
                    android:id="@+id/txt_recipient"
                    style="@style/send_message_title_right"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dimen15"/>
                <ImageView
                    android:id="@+id/img_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/dimen15"
                    android:src="@drawable/icon_next_nor"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_ebebeb"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:minHeight="200dp">
                <TextView
                    android:id="@+id/edit_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="@dimen/dimen15"
                    android:paddingRight="@dimen/dimen15"
                    android:paddingTop="@dimen/dimen18"
                    android:textColor="@color/color_808080"
                    android:textSize="@dimen/size16"/>
            </RelativeLayout>
            <View
                style="@style/DividerHorizontal1"/>
            <com.onesoft.digitaledu.widget.FixGridView
                android:id="@+id/grid_files"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:horizontalSpacing="@dimen/dimen10"
                android:listSelector="@android:color/transparent"
                android:numColumns="2"
                android:paddingBottom="@dimen/dimen25"
                android:paddingLeft="@dimen/dimen20"
                android:paddingRight="@dimen/dimen20"
                android:paddingTop="@dimen/dimen25"
                android:verticalSpacing="@dimen/dimen10"/>
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/dimen10"
        android:layout_marginLeft="@dimen/dimen15"
        android:layout_marginRight="@dimen/dimen15"
        android:background="@drawable/shape_r6_fff"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen10"
        android:paddingTop="@dimen/dimen10"
        android:text="@string/delete"
        android:textColor="@color/color_666"
        android:textSize="@dimen/size16"/>
</RelativeLayout>