<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical"
        android:paddingTop="@dimen/dimen15">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/send_message_title"
                android:text="@string/name"/>
            <EditText
                android:id="@+id/edit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/dimen15"
                android:background="@null"
                android:hint="@string/need_write"
                android:paddingTop="@dimen/dimen15"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/size16"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/send_message_title"
                android:text="@string/number_type"/>
            <TextView
                android:id="@+id/txt_type"
                style="@style/send_message_title_right"
                android:text="@string/cellphone"/>
            <ImageView
                android:id="@+id/img_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dimen15"
                android:src="@drawable/icon_next_nor"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/send_message_title"
                android:text="@string/no"/>
            <EditText
                android:id="@+id/edit_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/dimen15"
                android:background="@null"
                android:hint="@string/need_write"
                android:paddingTop="@dimen/dimen15"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/size16"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/send_message_title"
                android:text="@string/add_time"/>
            <TextView
                android:id="@+id/edit_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="@dimen/dimen15"
                android:background="@null"
                android:text="@string/need_select"
                android:paddingTop="@dimen/dimen15"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/size16"/>

            <ImageView
                android:id="@+id/img_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dimen15"
                android:src="@drawable/icon_next_nor"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:minHeight="150dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <EditText
                android:id="@+id/edit_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen15"
                android:background="@null"
                android:hint="@string/hint_content_menu"
                android:paddingTop="@dimen/dimen15"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/size16"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>