<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/container"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/white" >

	<ImageView
		android:id="@+id/expand"
		android:layout_width="@dimen/dimen10"
		android:layout_height="@dimen/dimen10"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/dimen15"
		android:contentDescription="@null"
		android:src="@drawable/icon_menss_triangle_nor" />


	<TextView
		android:id="@+id/text"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/dimen17"
		android:layout_toRightOf="@id/expand"
		android:gravity="center"
		android:paddingTop="19dp"
		android:paddingBottom="15dp"
		android:maxLines="1"
		android:text="教师"
		android:textColor="@color/color_333"
		android:textSize="14sp" />

	<TextView
		android:id="@+id/count"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="@dimen/dimen15"
		android:gravity="center"
		android:text="1"
		android:textColor="@color/color_ccc"
		android:textSize="12sp" />

</RelativeLayout>