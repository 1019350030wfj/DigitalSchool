<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_r8_fff_d9d9d9"
    android:layout_marginLeft="@dimen/dimen15"
    android:layout_marginRight="@dimen/dimen15"
    android:paddingBottom="@dimen/dimen5"
    android:paddingLeft="@dimen/dimen10"
    android:paddingRight="@dimen/dimen10"
    android:paddingTop="@dimen/dimen5"
    tools:showIn="@layout/activity_search_menu">
    <ImageView
        android:id="@+id/img_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen10"
        android:background="@drawable/icon_find"/>

    <ImageView
        android:id="@+id/img_search_del"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen10"
        android:background="@drawable/icon_find_del"/>

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/img_search_del"
        android:layout_toRightOf="@id/img_search"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:paddingBottom="@dimen/dimen5"
        android:paddingTop="@dimen/dimen5"
        android:singleLine="true"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/size12"
    />
</RelativeLayout>