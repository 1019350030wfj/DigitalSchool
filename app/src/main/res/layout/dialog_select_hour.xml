<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="261dp"
    android:layout_height="353dp"
    android:layout_gravity="center"
    android:background="@drawable/shape_r16_fff"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="@string/birthday"
        android:textColor="@color/color_1A1A1A"
        android:textSize="@dimen/size16"/>

    <View
        style="@style/DividerHorizontal1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <com.onesoft.digitaledu.widget.wheel.DatePickerView
                android:id="@+id/year_pv"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="3"/>

            <TextView
                android:id="@+id/year_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/year"
                android:textColor="@color/color_1A1A1A"
                android:textSize="16sp"/>

            <com.onesoft.digitaledu.widget.wheel.DatePickerView
                android:id="@+id/month_pv"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/month_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/month"
                android:textColor="@color/color_1A1A1A"
                android:textSize="16sp"/>

            <com.onesoft.digitaledu.widget.wheel.DatePickerView
                android:id="@+id/day_pv"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/day_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/day"
                android:textColor="@color/color_1A1A1A"
                android:textSize="16sp"/>

            <com.onesoft.digitaledu.widget.wheel.DatePickerView
                android:id="@+id/hour_pv"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/hour_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/hour"
                android:textColor="@color/color_1A1A1A"
                android:textSize="16sp"/>

            <com.onesoft.digitaledu.widget.wheel.DatePickerView
                android:id="@+id/minute_pv"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="2"/>

            <TextView
                android:id="@+id/minute_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/minute"
                android:textColor="@color/color_1A1A1A"
                android:textSize="16sp"/>

        </LinearLayout>

    </RelativeLayout>

    <View
        style="@style/DividerHorizontal1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/size16"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="54dp"
            android:background="@color/color_ebebeb"/>

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/color_1A1A1A"
            android:textSize="@dimen/size16"/>
    </LinearLayout>

</LinearLayout>