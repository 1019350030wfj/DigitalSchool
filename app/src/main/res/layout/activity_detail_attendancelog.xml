<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/txt_title"
                style="@style/send_message_title"
                android:text="@string/name"/>
            <TextView
                android:id="@+id/edit_name"
                style="@style/send_message_content"
            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <RelativeLayout
            android:id="@+id/rl_menu_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/send_message_title"
                android:text="@string/teacher_no"
                android:textSize="14sp"
            />
            <TextView
                android:id="@+id/title_teacher_no"
                style="@style/send_message_title_right"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="@dimen/dimen25"
                android:text="@string/house"
            />
            <ImageView
                android:id="@+id/img_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dimen15"
                android:visibility="invisible"
                android:src="@drawable/icon_next_nor"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/title"
                style="@style/send_message_title"
                android:text="@string/from_time"
                android:textSize="14sp"
            />
            <TextView
                android:id="@+id/title_from_time"
                style="@style/send_message_title_right"
                android:text="选择日期"
            />

            <TextView
                android:id="@+id/title_from_time_hour"
                style="@style/send_message_title_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:text="选择时间"
            />
            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dimen35"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/title_from_time_hour"
                android:background="@color/color_ebebeb"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/send_message_title"
                android:text="@string/to_time"
                android:textSize="14sp"
            />
            <TextView
                android:id="@+id/title_to_time"
                style="@style/send_message_title_right"
                android:text="选择日期"
            />

            <TextView
                android:id="@+id/title_to_time_hour"
                style="@style/send_message_title_right"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dimen15"
                android:paddingRight="@dimen/dimen15"
                android:text="选择时间"
            />
            <View
                android:layout_width="0.5dp"
                android:layout_height="@dimen/dimen35"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/title_to_time_hour"
                android:background="@color/color_ebebeb"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                style="@style/send_message_title"
                android:text="@string/state"
                android:textSize="14sp"
            />
            <TextView
                android:id="@+id/title_state"
                style="@style/send_message_title_right"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingRight="@dimen/dimen25"
                android:text="@string/remind"
            />
            <ImageView
                android:id="@+id/img_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/dimen15"
                android:visibility="invisible"
                android:src="@drawable/icon_next_nor"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/txt_place"
                style="@style/send_message_title"
                android:text="@string/remark"/>
            <TextView
                android:id="@+id/edit_remark"
                style="@style/send_message_content"
            />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_ebebeb"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:minHeight="150dp"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">
            <TextView
                android:id="@+id/edit_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen15"
                android:background="@null"
                android:paddingTop="@dimen/dimen15"
                android:textColor="@color/color_808080"
                android:textSize="@dimen/size16"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
