        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginRight="@dimen/dimen15"-->
        <!--android:scaleType="fitXY"-->
        <!--android:src="@drawable/btn_radio_nor"/>-->

</RelativeLayout>