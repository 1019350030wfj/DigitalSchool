<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_item_height_third"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_ebebeb"
        android:paddingLeft="@dimen/dimen10"
        android:paddingRight="@dimen/dimen10"/>

    <RelativeLayout
        android:id="@+id/rl_recycler"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_item_height_third_item"
        android:paddingLeft="@dimen/dimen15"
        android:paddingRight="@dimen/dimen5"
        >
        <TextView
            android:id="@+id/txt_recycler"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/operator"
            android:textColor="@color/color_BBBBBB"
            android:textSize="@dimen/size12"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_operator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_item_height_third_item"
            android:layout_alignParentRight="true"
            android:gravity="center"/>

    </RelativeLayout>
</LinearLayout>
