<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1242">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimen45"
        android:paddingRight="@dimen/dimen45"
        android:paddingTop="40dp">

        <com.onesoft.digitaledu.widget.CircleImageView
            android:id="@+id/iv_avater"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/icon_default_avatar"
            app:civ_border_and_bitmap_width="1dp"
            app:civ_border_color="#B3ffffff"
            app:civ_border_width="3dp"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="@dimen/height_login"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_r6_fff_1d">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_login_user"/>
            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:background="#80ffffff"/>
            <EditText
                android:id="@+id/edi_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="11"
                android:hint="账号"
                android:paddingLeft="@dimen/dimen10"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="@dimen/height_login"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_r6_fff_1d">>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_login_password"/>

            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="1dp"
                android:background="#80ffffff"/>

            <EditText
                android:id="@+id/edi_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="11"
                android:hint="密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dimen10"
                android:textColor="#ffffff"
                android:textColorHint="#ffffff"
                android:textSize="14sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="250dp"
            android:layout_height="@dimen/height_login"
            android:layout_marginTop="20dp"
            android:background="@drawable/shape_r6_fff_0d"
            android:gravity="center"
            android:text="登陆"
            android:textColor="#1099d4"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btn_forget_pwd"
            android:layout_width="250dp"
            android:layout_height="@dimen/height_login"
            android:layout_marginTop="12dp"
            android:background="@drawable/shape_r6_fff_1d_transparent"
            android:gravity="center"
            android:text="忘记密码"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:paddingBottom="40dp"
            android:text="Copyright © 2016-2018 onesoft.com"
            android:textColor="#66ffffff"
            android:textSize="@dimen/size12"
        />
    </LinearLayout>
</FrameLayout>
