<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="BaseAppTheme" parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/colorPrimary</item>    <!-- 状态栏 -->
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item> <!-- toolbar -->
        <item name="android:colorAccent">@color/colorAccent</item>  <!-- 重点 -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:listDivider">@drawable/shape_divider_bg</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e6e6e6</item>
    </style>
    <style name="DividerHorizontal1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#ebebeb</item>
    </style>

    <style name="TabLinearWeight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TabTVWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TabIVWrap">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="FineLineStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/fine_line_height</item>
        <item name="android:background">@color/color_dividing_line</item>
    </style>
    <style name="next">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/icon_next_nor</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingRight">@dimen/dimen15</item>
    </style>

    <style name="month_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
    </style>
    <style name="month_view_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingRight">@dimen/dimen5</item>
        <item name="android:paddingLeft">@dimen/dimen5</item>
    </style>
    <style name="send_message_title">
        <item name="android:padding">@dimen/dimen15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/color_1A1A1A</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxEms">7</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="send_message_content">
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_marginRight">@dimen/dimen15</item>
        <item name="android:paddingTop">@dimen/dimen15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/color_808080</item>
        <item name="android:background">@null</item>
    </style>
    <style name="person_info_title">
        <item name="android:padding">@dimen/dimen15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/color_808080</item>
    </style>
    <style name="person_info_title1">
        <item name="android:paddingTop">@dimen/dimen15</item>
        <item name="android:paddingBottom">@dimen/dimen15</item>
        <item name="android:layout_marginRight">@dimen/dimen15</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/color_1A1A1A</item>
        <item name="android:background">@null</item>
    </style>
    <style name="detail_message_title">
        <item name="android:padding">@dimen/dimen15</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size18</item>
        <item name="android:textColor">@color/color_1A1A1A</item>
    </style>
    <style name="send_message_title_right">
        <item name="android:paddingTop">@dimen/dimen15</item>
        <item name="android:paddingBottom">@dimen/dimen15</item>
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">@color/color_808080</item>
    </style>

    <style name="dialog_transparent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>
    <style name="StyleProgressBarMini" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/shape_progressbar_mini</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="weekName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_1A1A1A</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="dialog_bottom_enter" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/show_set</item>
        <item name="android:windowExitAnimation">@anim/hide_set</item>
    </style>

    <!-- LookPicActivity专用Theme -->
    <style name="BigPictureAppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>
    <style name="LookBigPicTheme" parent="BigPictureAppTheme">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>
