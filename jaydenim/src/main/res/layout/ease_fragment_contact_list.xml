<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_bg"
              android:orientation="vertical">

    <com.onesoft.jaydenim.widget.EaseTitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        hyphenate:titleBarLeftImage="@drawable/ease_mm_title_back"
        hyphenate:titleBarTitle="@string/address_book"
    />

    <include
        android:id="@+id/search_bar_view"
        layout="@layout/ease_search_bar_with_padding"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:background="@android:color/white"
                  android:orientation="horizontal"
                  android:paddingTop="5dp">

        <RelativeLayout android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/txt_new_friend"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/new_friend"
                    android:gravity="center"
                    android:text="@string/new_friend"
                    android:textSize="14sp"/>
                <TextView
                    android:id="@+id/unread_msg_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/ease_unread_count_bg"
                    android:gravity="center"
                    android:text="@string/new1"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"/>

            </RelativeLayout>
        </RelativeLayout>
        <TextView android:id="@+id/txt_new_group"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:drawableTop="@drawable/new_group"
                  android:gravity="center"
                  android:text="@string/group_chat"
                  android:textSize="14sp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.onesoft.jaydenim.widget.EaseContactList
            android:id="@+id/contact_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <!-- hyphenate:ctsListInitialLetterBg="#abc" -->

    </FrameLayout>

</LinearLayout>